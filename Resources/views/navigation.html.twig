{% block menu %}
{% spaceless %}
    {% if items %}
        <ul class="nav">{{ items|raw }}</ul>
    {% endif %}
{% endspaceless %}
{% endblock %}

{% block menu_item %}
{% spaceless %}
    <li{% if item.active %} class="active"{% endif %}>
        <a href="{{ item.uri }}">{{ block('label') }}</a>
    </li>
{% endspaceless %}
{% endblock %}

{% block menu_item_children %}
{% spaceless %}
    <li class="dropdown{% if item.active %} active{% endif %}">
        <a href="{{ item.uri }}" class="dropdown-toggle" data-toggle="dropdown">
            {{ block('label') }} <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">{{ items|raw }}</ul>
    </li>
{% endspaceless %}
{% endblock %}

{% block breadcrumbs %}
{% spaceless %}
    {% if items %}
        <ul class="breadcrumb">
            {% for item in items|reverse %}
                <li>
                    {% if loop.last and options.last is not defined %}
                        {{ block('label') }}
                    {% else %}
                        <a href="{{ item.uri }}">{{ block('label') }}</a>
                        <span class="divider">/</span>
                    {% endif %}
                </li>
            {% endfor %}
            {% if options.last is defined %}
                <li>{{ options.last }}</li>
            {% endif %}
        </ul>
    {% endif %}
{% endspaceless %}
{% endblock %}

{% block label %}
{% spaceless %}
    {{ item.label|trans(item.transParams|default({}), item.transDomain|default(null)) }}
{% endspaceless %}
{% endblock %}
